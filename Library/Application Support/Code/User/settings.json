{
  // Telemetry
  "telemetry.telemetryLevel": "off",
  // Window
  "window.title": "${appName}",
  "window.autoDetectColorScheme": true,
  "window.restoreFullscreen": true,
  // Breadcrumbs
  "breadcrumbs.symbolPath": "off",
  "breadcrumbs.enabled": false,
  "breadcrumbs.icons": false,
  // Files
  "files.autoSave": "afterDelay",
  "files.simpleDialog.enable": true,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.enableTrash": true,
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true,
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/node_modules": true,
    "**/_build": true,
  },
  // Theme
  "workbench.iconTheme": "material-icon-theme",
  "workbench.preferredLightColorTheme": "Material Theme Lighter",
  "workbench.preferredDarkColorTheme": "Material Theme High Contrast",
  "workbench.colorTheme": "Material Theme Lighter",
  // Workbench
  "workbench.startupEditor": "newUntitledFile",
  "workbench.commandPalette.history": 0,
  "workbench.list.automaticKeyboardNavigation": false,
  "workbench.list.smoothScrolling": true,
  "workbench.tree.renderIndentGuides": "none",
  "workbench.settings.editor": "json",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editorAssociations": {
    "*.ipynb": "jupyter-notebook",
    "*.pdf": "pdf.view"
  },
  // Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.openEditors.visible": 0,
  "explorer.sortOrder": "type",
  // Font
  "editor.fontFamily": "SF Mono, JetBrains Mono, monospace",
  "editor.codeLensFontFamily": "SF Mono, JetBrains Mono, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  // Indentation
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.rulers": [
    {
      "column": 80,
    },
    {
      "column": 120,
    }
  ],
  // Wrapping
  "editor.wordWrap": "on",
  "editor.wrappingIndent": "deepIndent",
  "editor.wrappingStrategy": "advanced",
  // Format
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  // Automatic
  "editor.linkedEditing": true,
  // Suggestions
  "editor.codeLens": true,
  "editor.parameterHints.enabled": true,
  "editor.inlayHints.enabled": true,
  "editor.tabCompletion": "on",
  "editor.acceptSuggestionOnEnter": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.wordBasedSuggestions": false,
  "editor.quickSuggestionsDelay": 0,
  "editor.snippetSuggestions": "top",
  "editor.suggestSelection": "recentlyUsedByPrefix",
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  // Visual
  "editor.cursorStyle": "line",
  "editor.cursorBlinking": "phase",
  "editor.lineNumbers": "on",
  "editor.guides.bracketPairs": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.semanticHighlighting.enabled": true,
  // Scrolling
  "editor.hideCursorInOverviewRuler": true,
  "editor.cursorSmoothCaretAnimation": true,
  "editor.scrollBeyondLastLine": false,
  "editor.smoothScrolling": true,
  // Scrollbar
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.horizontalScrollbarSize": 0,
  "editor.scrollbar.verticalScrollbarSize": 0,
  // Minimap
  "editor.minimap.enabled": false,
  // Notebook
  "notebook.lineNumbers": "on",
  "jupyter.askForKernelRestart": false,
  "notebook.cellToolbarLocation": {
    "default": "right",
    "jupyter-notebook": "left"
  },
  // source
  "editor.codeActionsOnSave": {
    "source.organizeImports": true,
    "source.fixAll": true,
  },
  // Git
  "git.allowForcePush": true,
  "git.useForcePushWithLease": true,
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "git.confirmSync": false,
  "git.autofetch": true,
  // Output
  "[Log]": {
    "editor.fontSize": 14,
  },
  // Debug
  "debug.console.fontFamily": "SF Mono, JetBrains Mono, monospace",
  "debug.console.fontSize": 14,
  "debug.inlineValues": true,
  // Terminal
  "terminal.integrated.fontFamily": "SF Mono, JetBrains Mono, monospace",
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.gpuAcceleration": "auto",
  // Extensions
  "extensions.ignoreRecommendations": true,
  // C
  "C_Cpp.clang_format_fallbackStyle": "Google",
  "C_Cpp.default.cppStandard": "c++20",
  "C_Cpp.default.cStandard": "c17",
  // Java
  "java.referencesCodeLens.enabled": true,
  "java.implementationsCodeLens.enabled": true,
  "java.codeGeneration.generateComments": true,
  "java.completion.guessMethodArguments": true,
  // OCaml
  "ocaml.sandbox": {
    "kind": "global"
  },
  "[ocaml]": {
    "editor.defaultFormatter": "ocamllabs.ocaml-platform"
  },
  // Python
  "python.languageServer": "Pylance",
  "python.formatting.provider": "autopep8",
  "python.formatting.autopep8Args": [
    "--indent-size=2"
],
  "python.pythonPath": "python3",
  // Javascript/Typescript
  "javascript.referencesCodeLens.showOnAllFunctions": true,
  "javascript.referencesCodeLens.enabled": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  // HTML
  "html.format.wrapAttributes": "force-aligned",
  "html.format.templating": true,
  "files.associations": {
    "*.ejs": "html"
  },
  "emmet.includeLanguages": {
    "ejs": "html",
  },
  // CSS
  "css.styleSheets": [
    "https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/css/bootstrap.min.css",
  ],
  // Markdown
  "markdown.preview.fontFamily": "SF Mono, JetBrains Mono, monospace",
  "markdown.preview.fontSize": 14,
  // Project Manager
  "projectManager.git.baseFolders": [
    "/Users/fraguinha/GitHub",
    "/Users/fraguinha/Documents"
  ],
  // Gitlens
  "gitlens.currentLine.enabled": false,
  // liveshare
  "liveshare.presence": true,
  "liveshare.audio.joinCallBehavior": "accept",
  "liveshare.audio.startCallOnShare": true,
  "python.defaultInterpreterPath": "/usr/local/bin/python3",
  "workbench.colorCustomizations": {
    "[Material Theme Lighter]": {}
  },
}